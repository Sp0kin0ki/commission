<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.controllers.UpdateSpecialityScoreController"
    style="-fx-background-color: #f0f0f0;">

    <VBox alignment="CENTER" spacing="25"
        style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
        <Label text="Обновление проходного балла специальности"
            style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;">
            <font>
                <Font size="20" />
            </font>
        </Label>

        <VBox spacing="15" alignment="CENTER">
            <HBox spacing="15" alignment="CENTER">
                <Label text="Название специальности:" style="-fx-font-size: 16; -fx-min-width: 200;">
                    <font>
                        <Font size="16" />
                    </font>
                </Label>
                <TextField fx:id="specialtyNameField" promptText="Например: Инженерия"
                    style="-fx-font-size: 16; -fx-pref-height: 35; -fx-pref-width: 300;" />
            </HBox>

            <HBox spacing="15" alignment="CENTER">
                <Label text="Новый проходной балл:" style="-fx-font-size: 16; -fx-min-width: 200;">
                    <font>
                        <Font size="16" />
                    </font>
                </Label>
                <TextField fx:id="newScoreField" promptText="Например: 275"
                    style="-fx-font-size: 16; -fx-pref-height: 35; -fx-pref-width: 300;" />
            </HBox>
        </VBox>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="updateButton" text="Обновить балл" onAction="#handleUpdate"
                style="-fx-background-color: #4b86b4; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-pref-width: 220; -fx-pref-height: 40;" />

            <Button fx:id="backButton" text="Назад" onAction="#handleBack"
                style="-fx-background-color: #adadad; -fx-text-fill: white; -fx-font-size: 16; -fx-pref-width: 220; -fx-pref-height: 40;" />
        </HBox>

        <Label fx:id="statusLabel"
            style="-fx-text-fill: #0066cc; -fx-font-size: 16; -fx-font-weight: bold;" />
    </VBox>
</StackPane>